{% doc %}
  @prompt
    Create a ticker with customization options it will keep sliding in loop
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-ticker-{{ ai_gen_id }} {
    width: 100%;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_vertical }}px 0;
    position: relative;
    display: block;
  }

  .ai-ticker-track-{{ ai_gen_id }} {
    display: flex;
    width: fit-content;
    animation: ai-ticker-scroll-{{ ai_gen_id }} {{ block.settings.animation_speed }}s linear infinite;
  }

  .ai-ticker-{{ ai_gen_id }}:hover .ai-ticker-track-{{ ai_gen_id }} {
    {% if block.settings.pause_on_hover %}
      animation-play-state: paused;
    {% endif %}
  }

  .ai-ticker-item-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    white-space: nowrap;
    padding: 0 {{ block.settings.item_spacing }}px;
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    text-transform: {{ block.settings.text_transform }};
    letter-spacing: {{ block.settings.letter_spacing }};
  }

  .ai-ticker-separator-{{ ai_gen_id }} {
    margin: 0 {{ block.settings.separator_spacing }}px;
    color: {{ block.settings.separator_color }};
    font-size: {{ block.settings.separator_size }}px;
  }

  @keyframes ai-ticker-scroll-{{ ai_gen_id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-ticker-item-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<ticker-block-{{ ai_gen_id }} class="ai-ticker-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-ticker-track-{{ ai_gen_id }}">
    {% for i in (1..2) %}
      {% for j in (1..5) %}
        {% assign item_key = 'item_' | append: j %}
        {% assign item_text = block.settings[item_key] %}
        {% if item_text != blank %}
          <div class="ai-ticker-item-{{ ai_gen_id }}">
            {{ item_text }}
            {% if block.settings.show_separator %}
              <span class="ai-ticker-separator-{{ ai_gen_id }}">{{ block.settings.separator_symbol }}</span>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    {% endfor %}
  </div>
</ticker-block-{{ ai_gen_id }}>

<script>
  (function() {
    class TickerBlock{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-ticker-track-{{ ai_gen_id }}');
        this.adjustAnimation();
      }

      adjustAnimation() {
        if (!this.track) return;
        
        const trackWidth = this.track.scrollWidth / 2;
        const containerWidth = this.offsetWidth;
        
        if (trackWidth < containerWidth) {
          this.track.style.animation = 'none';
        }
      }
    }

    customElements.define('ticker-block-{{ ai_gen_id }}', TickerBlock{{ ai_gen_id }});
  })();
</script>

