<script>
  (function() {
    class TickerBlock{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.adjustAnimation();
      }

      adjustAnimation() {
        const wrapper = this.querySelector('.ai-ticker-wrapper-{{ ai_gen_id }}');
        if (wrapper) {
          const content = wrapper.querySelector('.ai-ticker-content-{{ ai_gen_id }}');
          if (content) {
            const contentWidth = content.offsetWidth;
            wrapper.style.width = (contentWidth * 2) + 'px';
          }
        }
      }
    }

    customElements.define('ticker-block-{{ ai_gen_id }}', TickerBlock{{ ai_gen_id }});
  })();
</script>

