<script>
document.addEventListener("DOMContentLoaded", function () {
    function getPriceElement() {
        return document.querySelector('[data-product-price] .price-item .money');
    }

    function getProductId() {
        const wrapper = document.querySelector('[data-product-price]');
        return wrapper ? wrapper.getAttribute('data-product-id') : null;
    }
    
    function parsePrice(priceText) {
        let cleaned = priceText
            .replace("Rs.", "")
            .replace("PKR", "")
            .replace(".00", "")
            .replace(",", "")
            .trim();       

        let price = parseFloat(cleaned);

        return price;
    }

    function toggleBaadmayWrapper(price) {
        const wrapper = document.querySelector('.baadmay-product-wrapper');
        if (!wrapper) return;

        if (price > 50000) {
            wrapper.style.display = 'none';
        } else {
            wrapper.style.display = '';
        }
    }

    function updateInstallmentPrice() {
        const priceElement = getPriceElement();
        const productId = getProductId();

        if (!priceElement || !productId) return;

        const priceText = priceElement.textContent.trim();
        const priceInRupees = parsePrice(priceText);

        if (isNaN(priceInRupees) || priceInRupees <= 0) return;

        // ðŸ‘‡ Hide / show wrapper based on price
        toggleBaadmayWrapper(priceInRupees);

        const installmentElement = document.querySelector(
            '.baadmay-price[data-product-id="' + productId + '"] .price-divide'
        );

        if (!installmentElement) return;

        const installmentPrice = Math.floor((priceInRupees * 1.15) / 3);
        installmentElement.textContent = installmentPrice.toLocaleString();
    }

    setTimeout(updateInstallmentPrice, 1000);

    function observePriceChanges() {
        const priceNode = getPriceElement();
        if (!priceNode) return;

        const observer = new MutationObserver(() => {
            setTimeout(updateInstallmentPrice, 1000);
        });

        observer.observe(priceNode, {
            characterData: true,
            childList: true,
            subtree: true
        });
    }

    observePriceChanges();

    const variantInput = document.querySelector(
        'form[action="/cart/add"] input[name="id"]'
    );

    if (variantInput) {
        variantInput.addEventListener("change", function () {
            setTimeout(updateInstallmentPrice, 1000);
        });
    }
});
</script>
