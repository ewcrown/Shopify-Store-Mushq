{% comment %}
  New Arrivals â€“ 4-col layout: content block + product cards.
  Product cards: image, hover Add to Cart (AJAX), color swatches, title, price.
  Online Store 2.0 compatible.
{% endcomment %}
{%- assign collection = section.settings.collection -%}
{%- assign max_products = section.settings.max_products | default: 4 -%}
{%- if collection != blank -%}
  {%- assign products = collection.products -%}
{%- else -%}
  {%- assign products = collections.all.products -%}
{%- endif -%}

{%- style -%}
  #new-arrivals-{{ section.id }} {
    --na-section-bg: {{ section.settings.section_bg | default: '#ffffff' }};
    --na-section-padding-top: {{ section.settings.section_padding_top | default: 60 }}px;
    --na-section-padding-bottom: {{ section.settings.section_padding_bottom | default: 60 }}px;
    --na-label-color: {{ section.settings.label_color | default: '#666666' }};
    --na-heading-color: {{ section.settings.heading_color | default: '#1a1a1a' }};
    --na-primary-btn-bg: {{ section.settings.primary_btn_bg | default: '#e8d5d8' }};
    --na-primary-btn-color: {{ section.settings.primary_btn_color | default: '#5c4a4d' }};
    --na-primary-btn-border: {{ section.settings.primary_btn_border | default: '#e8d5d8' }};
    --na-primary-btn-hover-bg: {{ section.settings.primary_btn_hover_bg | default: '#dfc8cc' }};
    --na-secondary-btn-bg: {{ section.settings.secondary_btn_bg | default: '#00000000' }};
    --na-secondary-btn-color: {{ section.settings.secondary_btn_color | default: '#5c4a4d' }};
    --na-secondary-btn-border: {{ section.settings.secondary_btn_border | default: '#d4c4c7' }};
    --na-secondary-btn-hover-bg: {{ section.settings.secondary_btn_hover_bg | default: '#f5eeef' }};
    --na-addtocart-bg: {{ section.settings.addtocart_btn_bg | default: '#e8d5d8' }};
    --na-addtocart-color: {{ section.settings.addtocart_btn_color | default: '#5c4a4d' }};
    --na-card-title-color: {{ section.settings.card_title_color | default: '#1a1a1a' }};
    --na-card-price-color: {{ section.settings.card_price_color | default: '#1a1a1a' }};
    --na-swatch-active-border: {{ section.settings.swatch_active_border | default: '#5c4a4d' }};
    --na-swatch-default-bg: {{ section.settings.swatch_default_bg | default: '#e8e8e8' }};
    --na-overlay-bg: {{ section.settings.overlay_bg | default: '#ffffff' }};
    --na-overlay-opacity: {{ section.settings.overlay_opacity | default: 85 }}%;
    --na-arrow-bg: {{ section.settings.arrow_bg | default: '#ffffff' }};
    --na-arrow-color: {{ section.settings.arrow_color | default: '#5c4a4d' }};
    --na-arrow-border: {{ section.settings.arrow_border | default: '#d4c4c7' }};
    --na-arrow-hover-bg: {{ section.settings.arrow_hover_bg | default: '#e8d5d8' }};
    --na-card-radius: {{ section.settings.card_border_radius | default: 0 }}px;
    --na-card-media-bg: {{ section.settings.card_media_bg | default: '#fafafa' }};
  }
{%- endstyle -%}
<section class="new-arrivals new-arrivals--{{ section.settings.layout | default: 'slider' }} section-{{ section.id }}" id="new-arrivals-{{ section.id }}" style="background-color: var(--na-section-bg); padding-top: var(--na-section-padding-top); padding-bottom: var(--na-section-padding-bottom);">
  <div class="new-arrivals__container">
    <div class="new-arrivals__content">
      {% if section.settings.label != blank %}
        <p class="new-arrivals__label">{{ section.settings.label }}</p>
      {% endif %}
      {% if section.settings.heading != blank %}
        <h2 class="new-arrivals__heading">{{ section.settings.heading }}</h2>
      {% endif %}
      <div class="new-arrivals__buttons">
        {% if section.settings.primary_button_text != blank %}
          <a href="{{ section.settings.primary_button_link | default: collection.url }}" class="new-arrivals__btn new-arrivals__btn--primary">
            {{ section.settings.primary_button_text }}
          </a>
        {% endif %}
        {% if section.settings.secondary_button_text != blank %}
          <a href="{{ section.settings.secondary_button_link | default: collection.url }}" class="new-arrivals__btn new-arrivals__btn--secondary">
            {{ section.settings.secondary_button_text }}
          </a>
        {% endif %}
      </div>
    </div>

    <div class="new-arrivals__slider-wrap">
      <div class="new-arrivals__slider" data-new-arrivals-slider data-layout="{{ section.settings.layout | default: 'slider' }}" aria-label="New arrivals products">
        {% for product in products limit: max_products %}
        {%- assign first_variant = product.selected_or_first_available_variant -%}
        {%- assign color_option = product.options_with_values | where: 'name', 'Color' | first -%}
        {%- if color_option == nil -%}
          {%- assign color_option = product.options_with_values | where: 'name', 'Colour' | first -%}
        {%- endif -%}
        {%- assign has_color = false -%}
        {%- if color_option and color_option.values.size > 0 -%}
          {%- assign has_color = true -%}
        {%- endif -%}

        <div class="new-arrivals__card" data-product-handle="{{ product.handle }}">
          <div class="new-arrivals__card-media">
            <a href="{{ product.url }}" class="new-arrivals__card-link" aria-label="{{ product.title }}">
              <img
                class="new-arrivals__card-image"
                src="{{ product.featured_image | image_url: width: 600 }}"
                alt="{{ product.featured_image.alt | default: product.title }}"
                width="600"
                height="750"
                loading="lazy"
                data-main-image
                {% for variant in product.variants limit: 1 %}
                  data-variant-id="{{ variant.id }}"
                {% endfor %}
              >
            </a>
            {% if section.settings.enable_hover_add_to_cart %}
              <div class="new-arrivals__card-overlay">
                <button
                  type="button"
                  class="new-arrivals__add-to-cart ew-add-to-cart"
                  data-variant-id="{{ first_variant.id }}"
                  data-product-title="{{ product.title | escape }}"
                  data-btn-addToCart
                  aria-label="Add {{ product.title }} to cart"
                >
                  {{ section.settings.add_to_cart_text | default: 'Add to Cart' }}
                </button>
              </div>
            {% endif %}
          </div>

          {% if has_color %}
            <div class="new-arrivals__swatches" data-swatches>
              {% assign option_position = color_option.position | minus: 1 %}
              {% for value in color_option.values %}
                {%- assign variant_for_value = product.variants | where: 'option1', value | first -%}
                {%- if variant_for_value == nil -%}
                  {%- assign variant_for_value = product.variants | where: 'option2', value | first -%}
                {%- endif -%}
                {%- if variant_for_value == nil -%}
                  {%- assign variant_for_value = product.variants | where: 'option3', value | first -%}
                {%- endif -%}
                {%- assign img_url = product.featured_image | image_url: width: 600 -%}
                {%- if variant_for_value and variant_for_value.featured_image -%}
                  {%- assign img_url = variant_for_value.featured_image | image_url: width: 600 -%}
                {%- endif -%}
                <button
                  type="button"
                  class="new-arrivals__swatch{% if forloop.first %} new-arrivals__swatch--active{% endif %}"
                  data-swatch
                  data-variant-id="{{ variant_for_value.id | default: first_variant.id }}"
                  data-image-url="{{ img_url }}"
                  data-image-alt="{{ variant_for_value.featured_image.alt | default: product.title | escape }}"
                  title="{{ value }}"
                  aria-label="Color {{ value }}"
                  data-swatch-value="{{ value | handleize }}"
                ></button>
              {% endfor %}
            </div>
          {% endif %}

          <div class="new-arrivals__card-info">
            <a href="{{ product.url }}" class="new-arrivals__card-title">{{ product.title }}</a>
            <span class="new-arrivals__card-price">{{ product.price | money }}</span>
          </div>

          {% unless section.settings.enable_hover_add_to_cart %}
            <form action="{{ routes.cart_add_url }}" method="post" class="new-arrivals__card-form" data-new-arrivals-atc-form>
              <input type="hidden" name="id" value="{{ first_variant.id }}">
              <button type="submit" class="new-arrivals__btn new-arrivals__btn--primary new-arrivals__add-to-cart-below ew-add-to-cart" data-btn-addToCart>
                {{ section.settings.add_to_cart_text | default: 'Add to Cart' }}
              </button>
            </form>
          {% endunless %}
        </div>
        {% endfor %}
      </div>
      {% if section.settings.layout == 'slider' %}
      <button type="button" class="new-arrivals__arrow new-arrivals__arrow--prev" aria-label="Previous products" data-slider-prev><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M15 18l-6-6 6-6"/></svg></button>
      <button type="button" class="new-arrivals__arrow new-arrivals__arrow--next" aria-label="Next products" data-slider-next><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 18l6-6-6-6"/></svg></button>
      {% endif %}
    </div>
  </div>
</section>

<style>
  .new-arrivals { padding-left: 24px; padding-right: 24px; }
  .new-arrivals__container { max-width: 1440px; margin: 0 auto; display: grid; grid-template-columns: 1fr 3fr; gap: 48px; align-items: start; }
  .new-arrivals__content { position: sticky; top: 24px; }
  .new-arrivals__label { font-size: 0.8125rem; text-transform: uppercase; letter-spacing: 0.08em; color: var(--na-label-color, #666); margin: 0 0 12px; }
  .new-arrivals__heading { font-size: clamp(1.75rem, 3vw, 2.5rem); font-weight: 600; margin: 0 0 24px; letter-spacing: -0.02em; color: var(--na-heading-color, #1a1a1a); }
  .new-arrivals__buttons { display: flex; flex-direction: column; gap: 14px; align-items: flex-start; }
  .new-arrivals__btn { display: inline-block; min-height: 48px; padding: 10px 28px; font-size: 16px; font-weight: 600; line-height: 1.25; text-align: center; border-radius: 24px; text-decoration: none; border: 2px solid transparent; transition: opacity 0.2s, transform 0.2s, background 0.2s, color 0.2s, border-color 0.2s; cursor: pointer; box-sizing: border-box; }
  .new-arrivals__btn--primary { background: var(--na-primary-btn-bg, #e8d5d8); color: var(--na-primary-btn-color, #5c4a4d); border-color: var(--na-primary-btn-border, #e8d5d8); }
  .new-arrivals__btn--primary:hover { opacity: 0.9; transform: translateY(-1px); background: var(--na-primary-btn-hover-bg, var(--na-primary-btn-bg, #e8d5d8)); }
  .new-arrivals__btn--secondary { background: var(--na-secondary-btn-bg, transparent); color: var(--na-secondary-btn-color, #5c4a4d); border-color: var(--na-secondary-btn-border, #d4c4c7); }
  .new-arrivals__btn--secondary:hover { background: var(--na-secondary-btn-hover-bg, #f5eeef); }
  .new-arrivals__slider-wrap { position: relative; margin: 0 -24px; padding: 0 24px; }
  .new-arrivals__slider { display: flex; overflow-x: auto; overflow-y: hidden; scroll-snap-type: x mandatory; scroll-behavior: smooth; gap: 20px; padding: 4px 0 24px; -webkit-overflow-scrolling: touch; scrollbar-width: none; }
  .new-arrivals__slider::-webkit-scrollbar { display: none; }
  .new-arrivals__card { flex: 0 0 calc((100% - 60px) / 4); min-width: 0; scroll-snap-align: start; display: flex; flex-direction: column; }
  .new-arrivals__card-media { position: relative; overflow: hidden; border-radius: var(--na-card-radius, 0); background: var(--na-card-media-bg, #fafafa); }
  .new-arrivals__card-link { display: block; }
  .new-arrivals__card-image { width: 100%; aspect-ratio: 4/5; object-fit: cover; border-radius: var(--na-card-radius, 0); transition: transform 0.35s ease, box-shadow 0.35s ease; }
  .new-arrivals__card:hover .new-arrivals__card-image { transform: scale(1.03); box-shadow: 0 8px 24px rgba(0,0,0,0.08); }
  .new-arrivals__card-overlay { position: absolute; inset: 0; display: flex; align-items: center; justify-content: center; background: color-mix(in srgb, var(--na-overlay-bg, #fff) var(--na-overlay-opacity, 85%), transparent); opacity: 0; transition: opacity 0.3s ease; border-radius: var(--na-card-radius, 0); pointer-events: none; }
  .new-arrivals__card:hover .new-arrivals__card-overlay { opacity: 1; pointer-events: auto; }
  .new-arrivals__add-to-cart { padding: 14px 28px; font-size: 0.9375rem; font-weight: 600; border-radius: 8px; border: none; background: var(--na-addtocart-bg, #e8d5d8); color: var(--na-addtocart-color, #5c4a4d); cursor: pointer; transition: opacity 0.2s, transform 0.2s; }
  .new-arrivals__add-to-cart:hover { opacity: 0.95; transform: scale(1.02); }
  .new-arrivals__add-to-cart:disabled { opacity: 0.7; cursor: not-allowed; }
  .new-arrivals__swatches { display: none; flex-wrap: wrap; gap: 8px; margin-top: 14px; }
  .new-arrivals__swatch { width: 24px; height: 24px; border-radius: 50%; border: 2px solid transparent; padding: 0; cursor: pointer; background-color: var(--na-swatch-default-bg, #e8e8e8); transition: border-color 0.2s, box-shadow 0.2s; }
  .new-arrivals__swatch:hover { box-shadow: 0 0 0 1px rgba(0,0,0,0.15); }
  .new-arrivals__swatch--active { border-color: var(--na-swatch-active-border, #5c4a4d); box-shadow: 0 0 0 2px #fff, 0 0 0 4px var(--na-swatch-active-border, #5c4a4d); }
  .new-arrivals__card-info { margin-top: 14px; }
  .new-arrivals__card-title { font-size: 0.9375rem; font-weight: 500; color: var(--na-card-title-color, #1a1a1a); text-decoration: none; display: block; margin-bottom: 4px; }
  .new-arrivals__card-title:hover { text-decoration: underline; }
  .new-arrivals__card-price { font-size: 0.9375rem; font-weight: 600; color: var(--na-card-price-color, #1a1a1a); }
  .new-arrivals__card-form { margin-top: 12px; }
  .new-arrivals__add-to-cart-below { width: 100%; }
  .new-arrivals__arrow { position: absolute; top: 50%; transform: translateY(-50%); width: 44px; height: 44px; border-radius: 50%; border: 1px solid var(--na-arrow-border, #d4c4c7); background: var(--na-arrow-bg, #fff); color: var(--na-arrow-color, #5c4a4d); cursor: pointer; z-index: 2; display: flex; align-items: center; justify-content: center; transition: background 0.2s, color 0.2s; box-shadow: 0 2px 8px rgba(0,0,0,0.06); }
  .new-arrivals__arrow:hover { background: var(--na-arrow-hover-bg, #e8d5d8); color: var(--na-arrow-color, #5c4a4d); }
  .new-arrivals__arrow--prev { left: 8px; }
  .new-arrivals__arrow--next { right: 8px; }
  .new-arrivals__arrow svg { width: 20px; height: 20px; }
  /* Grid layout */
  .new-arrivals--grid .new-arrivals__slider-wrap { padding: 0 24px; }
  .new-arrivals--grid .new-arrivals__slider { display: grid; grid-template-columns: repeat(4, 1fr); gap: 20px; overflow: visible; scroll-snap-type: none; padding: 0 0 24px; }
  .new-arrivals--grid .new-arrivals__card { flex: none; min-width: 0; }
  .new-arrivals--grid .new-arrivals__arrow { display: none; }
  @media (max-width: 990px) {
    .new-arrivals__container { grid-template-columns: 1fr; gap: 32px; }
    .new-arrivals__content { position: static; text-align: center; }
    .new-arrivals__buttons { flex-direction: row; justify-content: center; flex-wrap: wrap; align-items: center; }
    .new-arrivals__buttons .new-arrivals__btn + .new-arrivals__btn { margin-left: 0; }
    .new-arrivals__card { flex: 0 0 calc((100% - 40px) / 3); }
    .new-arrivals__slider-wrap { margin: 0 -16px; padding: 0 48px; }
    .new-arrivals__arrow--prev { left: 4px; }
    .new-arrivals__arrow--next { right: 4px; }
    .new-arrivals--grid .new-arrivals__slider { grid-template-columns: repeat(3, 1fr); }
    .new-arrivals--grid .new-arrivals__slider-wrap { padding: 0 24px; }
  }
 @media (max-width: 600px) {
  .new-arrivals {
    padding: 40px 16px;
  }

  /* reduce the side padding that's killing the slider width */
  .new-arrivals__slider-wrap {
    margin: 0 -16px;
    padding: 0; /* important */
  }

  /* give the slider its own padding and correct snap alignment */
  .new-arrivals__slider {
    gap: 16px;
    padding: 0 16px 24px;
    scroll-padding-left: 16px;
    scroll-padding-right: 16px;
  }

  /* stable mobile card width (shows 1 + peek cleanly) */
  .new-arrivals__card {
    flex: 0 0 82%;
    scroll-snap-align: start;
  }

  /* optional: arrows usually feel bad on mobile */
  .new-arrivals__arrow {
    display: none;
  }

  /* grid mode stays same */
  .new-arrivals--grid .new-arrivals__slider {
    grid-template-columns: repeat(2, 1fr);
    gap: 16px;
    padding: 0 0 24px;
    scroll-padding: 0;
  }
}
</style>

<script>
  (function() {
    const section = document.getElementById('new-arrivals-{{ section.id }}');
    if (!section) return;

    var slider = section.querySelector('[data-new-arrivals-slider]');
    var prevBtn = section.querySelector('[data-slider-prev]');
    var nextBtn = section.querySelector('[data-slider-next]');
    var isSlider = slider && slider.getAttribute('data-layout') === 'slider';
    if (slider && isSlider && (prevBtn || nextBtn)) {
      function getScrollAmount() {
        var card = slider.querySelector('.new-arrivals__card');
        if (!card) return slider.clientWidth;
        return card.offsetWidth + 20;
      }
      if (prevBtn) prevBtn.addEventListener('click', function() { slider.scrollBy({ left: -getScrollAmount(), behavior: 'smooth' }); });
      if (nextBtn) nextBtn.addEventListener('click', function() { slider.scrollBy({ left: getScrollAmount(), behavior: 'smooth' }); });
    }

    function getVariantIdFromForm(card) {
      const input = card.querySelector('input[name="id"]');
      return input ? input.value : null;
    }

    section.querySelectorAll('[data-swatches]').forEach(function(swatchGroup) {
      const card = swatchGroup.closest('.new-arrivals__card');
      const img = card && card.querySelector('[data-main-image]');
      const addBtn = card && card.querySelector('.new-arrivals__add-to-cart[data-variant-id]');
      swatchGroup.querySelectorAll('[data-swatch]').forEach(function(btn) {
        btn.addEventListener('click', function() {
          const url = this.getAttribute('data-image-url');
          const alt = this.getAttribute('data-image-alt') || '';
          const variantId = this.getAttribute('data-variant-id');
          swatchGroup.querySelectorAll('.new-arrivals__swatch--active').forEach(function(b) { b.classList.remove('new-arrivals__swatch--active'); });
          this.classList.add('new-arrivals__swatch--active');
          if (img && url) { img.src = url; img.alt = alt; }
          if (addBtn) addBtn.setAttribute('data-variant-id', variantId);
          const form = card && card.querySelector('.new-arrivals__card-form input[name="id"]');
          if (form) form.value = variantId;
        });
      });
    });

    // Same add-to-cart flow as ew-add-to-cart: POST cart/add.js, then update sidebar and open cart drawer
    var cartAddUrl = '{{ routes.cart_add_url }}.js';

    function addToCartNewArrivals(variantId, quantity) {
      quantity = quantity || 1;
      return fetch(cartAddUrl, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json', 'Accept': 'application/json' },
        body: JSON.stringify({ id: parseInt(variantId, 10), quantity: quantity })
      }).then(function(r) { return r.json(); });
    }

    function updateCartSidebar(cart) {
      document.body.classList.add('cart-sidebar-show');
      var updateFn = (window.sharedFunctions && typeof window.sharedFunctions.updateSidebarCart === 'function')
        ? window.sharedFunctions.updateSidebarCart
        : (window.halo && typeof window.halo.updateSidebarCart === 'function') ? window.halo.updateSidebarCart : null;
      if (updateFn && typeof $ !== 'undefined') {
        updateFn(cart);
      } else {
        var wrapper = document.querySelector('#halo-cart-sidebar .halo-sidebar-wrapper .previewCart-wrapper');
        if (wrapper) {
          wrapper.classList.add('is-loading');
          wrapper.insertAdjacentHTML('afterbegin', '<div class="loading-overlay loading-overlay--custom"><div class="loading-overlay__spinner"><svg class="spinner" viewBox="0 0 66 66" xmlns="http://www.w3.org/2000/svg"><circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle></svg></div></div>');
          var root = (window.routes && window.routes.root) || (window.Shopify && window.Shopify.routes && window.Shopify.routes.root) || '';
          var cartViewUrl = (typeof root === 'string' ? root.replace(/\/$/, '') : '') + '/cart?view=ajax_side_cart';
          fetch(cartViewUrl, { cache: 'no-store' })
            .then(function(r) { return r.text(); })
            .then(function(html) {
              wrapper.classList.remove('is-loading');
              var loadingEl = wrapper.querySelector('.loading-overlay');
              if (loadingEl) loadingEl.remove();
              wrapper.innerHTML = html;
              document.dispatchEvent(new CustomEvent('cart-update', { detail: cart }));
            })
            .catch(function() {
              wrapper.classList.remove('is-loading');
              var loadingEl = wrapper.querySelector('.loading-overlay');
              if (loadingEl) loadingEl.remove();
            });
        }
        var countEls = document.querySelectorAll('[data-cart-count]');
        var count = cart && cart.item_count != null ? cart.item_count : 0;
        var text = count >= 100 ? (window.cartStrings && window.cartStrings.item_99) || '99+' : String(count);
        countEls.forEach(function(el) { el.textContent = text; });
      }
    }

    function setButtonLoading(btn, loading) {
      btn.disabled = loading;
      if (loading) btn.classList.add('is-loading'); else btn.classList.remove('is-loading');
      if (typeof $ !== 'undefined' && $.fn && $.fn.addClass) {
        if (loading) $(btn).addClass('is-loading'); else $(btn).removeClass('is-loading');
      }
    }

    function handleAddToCart(variantId, actionBtn, originalText) {
      if (!variantId) return;
      setButtonLoading(actionBtn, true);
      if (actionBtn && !actionBtn.hasAttribute('data-keep-text')) actionBtn.setAttribute('data-original-text', actionBtn.textContent);
      addToCartNewArrivals(variantId, 1)
        .then(function(data) {
          if (data.status && data.status === 422) throw new Error(data.description || 'Could not add to cart');
          var showText = (typeof window.variantStrings !== 'undefined' && window.variantStrings.addedToCart) ? window.variantStrings.addedToCart : 'Added';
          if (actionBtn && !actionBtn.hasAttribute('data-keep-text')) actionBtn.textContent = showText;
          return fetch('/cart.js', { headers: { 'Accept': 'application/json' } }).then(function(r) { return r.json(); });
        })
        .then(function(cart) {
          updateCartSidebar(cart);
        })
        .catch(function(err) {
          if (actionBtn) {
            actionBtn.textContent = actionBtn.getAttribute('data-original-text') || originalText || 'Add to Cart';
            alert(err && err.message ? err.message : 'Could not add to cart');
          }
        })
        .finally(function() {
          setButtonLoading(actionBtn, false);
        });
    }

    section.querySelectorAll('.new-arrivals__add-to-cart[data-variant-id]').forEach(function(btn) {
      btn.addEventListener('click', function(e) {
        e.preventDefault();
        var variantId = this.getAttribute('data-variant-id');
        var originalText = this.textContent;
        handleAddToCart(variantId, this, originalText);
      });
    });

    section.querySelectorAll('form[data-new-arrivals-atc-form]').forEach(function(form) {
      form.addEventListener('submit', function(e) {
        e.preventDefault();
        var input = form.querySelector('input[name="id"]');
