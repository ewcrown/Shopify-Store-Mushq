<section class="editorial-strip-ai">
  <div class="editorial-strip-ai__wrapper-ai">
    {% for block in section.blocks %}
      <div class="editorial-strip-ai__item-ai" {{ block.shopify_attributes }}>
        {% if block.settings.link != blank %}
          <a href="{{ block.settings.link }}" class="editorial-strip-ai__link-ai">
        {% endif %}

          <div class="editorial-strip-ai__media-ai">
            {% if block.settings.image != blank %}
              {{
                block.settings.image
                | image_url: width: 1600
                | image_tag:
                  loading: 'lazy',
                  class: 'editorial-strip-ai__img-ai'
              }}
            {% else %}
              {{ 'image' | placeholder_svg_tag }}
            {% endif %}
          </div>

        {% if block.settings.link != blank %}
          </a>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</section>

<style>
.editorial-strip-ai {
  width: 100%;
  overflow: hidden;
}

.editorial-strip-ai__wrapper-ai {
  display: flex;
  gap: {{ section.settings.gap }}px;
  padding: 0 {{ section.settings.side_padding }}px;
}

.editorial-strip-ai__item-ai {
  flex: 1;
  overflow: hidden;
}

.editorial-strip-ai__media-ai {
  aspect-ratio: {{ section.settings.aspect_ratio }};
  overflow: hidden;
}

.editorial-strip-ai__img-ai {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.5s ease;
}

.editorial-strip-ai__item-ai:hover .editorial-strip-ai__img-ai {
  transform: scale(1.08);
}

/* Tablet */
@media (max-width: 990px) {
  .editorial-strip-ai__wrapper-ai {
    flex-wrap: nowrap;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
  }

  .editorial-strip-ai__item-ai {
    flex: 0 0 60%;
    scroll-snap-align: start;
  }
}

/* Mobile */
@media (max-width: 750px) {
  .editorial-strip-ai__item-ai {
    flex: 0 0 80%;
  }
}
</style>

{% schema %}
{
  "name": "Editorial Strip",
  "settings": [
    {
      "type": "range",
      "id": "gap",
      "label": "Gap between images (px)",
      "min": 0,
      "max": 20,
      "step": 1,
      "default": 6
    },
    {
      "type": "range",
      "id": "side_padding",
      "label": "Side padding (px)",
      "min": 0,
      "max": 40,
      "step": 1,
      "default": 0
    },
    {
      "type": "text",
      "id": "aspect_ratio",
      "label": "Aspect ratio (example: 3 / 4)",
      "default": "3 / 4"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Optional link"
        }
      ]
    }
  ],
  "max_blocks": 8,
  "presets": [
    {
      "name": "Editorial Strip",
      "blocks": [
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" }
      ]
    }
  ]
}
{% endschema %}
