{% comment %}
  NO RULES â€“ Hero section (landing)
  Settings: background image, heading, subheading
{% endcomment %}
<section class="no-rules-hero" id="no-rules-hero-{{ section.id }}">
  <div class="no-rules-hero__bg">
    {% if section.settings.image != blank %}
      <img
        src="{{ section.settings.image | image_url: width: 2000 }}"
        alt=""
        width="2000"
        height="828"
        loading="eager"
        style="width:100%;height:100%;object-fit:cover;"
      />
    {% else %}
      <div class="no-rules-hero__placeholder" style="min-height:400px;background:#f0f0f0;"></div>
    {% endif %}
  </div>
  <div class="no-rules-hero__content">
    {% if section.settings.heading != blank %}
      <h1 class="no-rules-hero__title">{{ section.settings.heading }}</h1>
    {% endif %}
    {% if section.settings.subheading != blank %}
      <p class="no-rules-hero__sub">{{ section.settings.subheading }}</p>
    {% endif %}
  </div>
  <style>
    .no-rules-hero { position: relative; max-width: 1440px; margin: 0 auto; min-height: 400px; display: flex; align-items: center; justify-content: flex-end; padding: 48px; overflow: hidden; }
    .no-rules-hero__bg { position: absolute; inset: 0; z-index: 0; }
    .no-rules-hero__content { position: relative; z-index: 1; text-align: right; }
    .no-rules-hero__title { font-size: clamp(2.5rem, 5vw, 4rem); font-weight: 700; margin-bottom: 8px; }
    .no-rules-hero__sub { font-size: clamp(1.5rem, 3vw, 2.5rem); font-weight: 600; opacity: 0.9; }
  </style>
</section>

{% schema %}
{
  "name": "NO RULES Hero",
  "tag": "section",
  "class": "section-no-rules-hero",
  "settings": [
    { "type": "image_picker", "id": "image", "label": "Background image" },
    { "type": "text", "id": "heading", "label": "Heading", "default": "Basic Pret" },
    { "type": "text", "id": "subheading", "label": "Subheading", "default": "2026" }
  ],
  "presets": [{ "name": "NO RULES Hero" }]
}
{% endschema %}
